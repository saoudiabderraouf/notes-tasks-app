<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.ui.OnBoardingAct">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/circle_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/_circle_blue"/>

            <View
                android:id="@+id/circle_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/_circle_gray"/>

            <View
                android:id="@+id/circle_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/_circle_gray"/>

        </LinearLayout>

        <TextView
            android:id="@+id/skip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_500"
            android:text="skip"
            android:textSize="14sp"
            android:textColor="#006EE9"/>
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/next_start_btn"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/on_boarding_img"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:src="@drawable/img_1"/>

        <TextView
            android:id="@+id/on_boarding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:fontFamily="@font/inter_500"
            android:text="Easy Time Management"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/on_boarding_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/inter_400"
            android:textAlignment="center"
            android:text="With management based on priority and daily tasks, it will give you convenience in managing and determining the tasks that must be done first"
            android:textSize="14sp"
            android:textColor="#4A4646"/>

    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/next_start_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/_rounded_blue_10dp">

        <TextView
            android:id="@+id/next_start_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/inter_600"
            android:text="Next"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>
    
</RelativeLayout>