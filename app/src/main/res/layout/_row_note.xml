<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="14dp"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="7dp"
        android:layout_marginVertical="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/note_description_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:fontFamily="@font/inter_500"
            android:gravity="start|top"
            android:text="Tree Pose"
            android:textSize="12sp"
            android:textColor="#000000"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/note_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="@font/inter_700"
        android:lines="1"
        android:text="Tree Pose"
        android:textSize="15sp"
        android:textColor="#006EE9"/>

    <TextView
        android:id="@+id/note_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="@font/inter_500"
        android:lines="1"
        android:text="13.10.2024 14:45:11"
        android:textSize="12sp"
        android:textColor="#80000000"/>

</LinearLayout>